        <div class="card-body">
            <div class="row">
                <div class="col-8">

                </div>
                <div class="col-4">
                    <form action="/setting/slider/add" method="post" enctype="multipart/form-data">
                        <div class="input-group mb-3">
                            <div class="custom-file">
                                <input type="file" class="custom-file-input" id="slider" name="slider" required>
                                <label class="custom-file-label" for="slider">Choose file</label>
                            </div>
                        </div>
                        <div class="text-right">
                            <button type="submit" class="btn btn-primary">
