<div class="container-fluid">
  <div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800"><%= title %></h1>
  </div>

  <div class="card shadow mb-4">
    <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-primary">Daftar Produk <%= category.name %></h6>
    </div>
    <div class="card-body">
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Kode</th>
            <th scope="col">Nama</th>
            <th scope="col">Deskripsi</th>
            <th scope="col">Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% category.products.forEach((product, i) => { %>
          <tr>
            <th scope="row"><%= i+1 %></th>
            <td><%= product.buyer_sku_code %></td>
            <td><%= product.name %></td>
            <td><%= product.description %></td>
            <td><a href="/products/<%= product.id %>/" class="btn btn-primary btn-sm">Detail</a></td>
          </tr>
          <% }); %>
        </tbody>
      </table>
      </form>
    </div>
  </div>
</div>