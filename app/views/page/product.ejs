<div class="container-fluid">
  <div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800"><%= title %></h1>
  </div>

  <div class="card shadow mb-4">
    <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-primary">Produk</h6>
    </div>
    <div class="card-body">
      <form action="/product/update" method="post">
        <div class="form-group row mb-4">
          <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3">Produk</label>
          <div class="col-sm-12 col-md-7">
            <select class="form-control" name="produk_buyer_sku_code">
              <% products.forEach(product => { %>
              <option value="<%= product.buyer_sku_code %>"><%= product.product_name %></option>
              <% }) %>
            </select>
          </div>
        </div>
        <div class="form-group row mb-4">
          <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3">Kategori</label>
          <div class="col-sm-12 col-md-7">
            <select class="form-control" name="kategori_id">
              <option value="1">Kategori 1</option>
              <option value="2">Kategori 2</option>
              <option value="3">Kategori 3</option>
              <option value="4">Kategori 4</option>
            </select>
          </div>
        </div>
        <div class="form-group row mb-4">
          <div class="col-sm-12 col-md-7 offset-md-3 offset-lg-3">
            <button class="btn btn-primary" type="submit">Simpan</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>